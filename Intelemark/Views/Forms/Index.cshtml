@model IEnumerable<Intelemark.DTO.Forms.Output>

@{
    ViewBag.Title = "Index";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Forms List</h4>
            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li><a href="@Url.Action("Create", "Forms")"> <i class="ft-plus-circle"></i> ADD</a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body">

                <table class="table table-striped table-hover table-bordered zero-configuration dataTable table-dataTables">
                    <thead>
                        <tr>
                            <th width="400">
                                Campaign
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Link
                            </th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    Campaign Identifier -  Campaign Description
                                </td>
                                <td>
                                    Name
                                </td>
                                <td>
                                    http://localhost:54683/Agent/AnswerForm/@item.Id
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-circle btn-primary la la-bars", title = "Details", data_toggle = "tooltip" })
                                    <button class="btn btn-danger la la-trash-o btn-sm" data-toggle="modal" data-target=".@item.Id"></button>
                                    @Html.Partial("~/Views/Shared/_Delete.cshtml", item.Id)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

