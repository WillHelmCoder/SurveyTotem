@model IEnumerable<Intelemark.Models.Reports.AgentCallAnalysisViewModel>

@{
    ViewBag.Title = "Agent Call Analysis Report";
    var start = Model.FirstOrDefault()?.StartDate ?? DateTime.Now.AddDays(-1);
    var end = Model.FirstOrDefault()?.EndDate ?? DateTime.Now;
}


<form action="/Reports/AgentCallAnalysis" enctype="multipart/form-data" method="post">
    <div class="col-md-12">
        @Html.Partial("~/Views/Shared/_FilterReport.cshtml", new Intelemark.Models.Reports.BaseReportModel() { StartDate = start, EndDate = end }, new ViewDataDictionary() { { "CampaignId", ViewBag.CampaignId } })
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Agent Call Analysis</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">

                    <table class="table table-striped table-hover table-bordered dataTable ReportDatatable" data-title="Intelemark Agent Call Analysis Report">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Agent)
                                </th>
                                <th>
                                    Campaign
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReportedHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ActualHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HoursDiff)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalDials)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DialsPerHour)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MinimumCallTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaximumCallTime)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Agent.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserCampaign.Campaign.Identifier) - @Html.DisplayFor(modelItem => item.UserCampaign.Campaign.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReportedHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActualHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoursDiff)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalDials)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DialsPerHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MinimumCallTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaximumCallTime)
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
</form>


