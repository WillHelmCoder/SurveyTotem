@model IEnumerable<Intelemark.Models.Reports.CampaignRevenueViewModel>

@{
    ViewBag.Title = "Campaign Revenue Report";
    var start = Model.FirstOrDefault()?.StartDate ?? DateTime.Now.AddDays(-1);
    var end = Model.FirstOrDefault()?.EndDate ?? DateTime.Now;
}


<form action="/Reports/CampaignRevenueReport" enctype="multipart/form-data" method="post">
    <div class="col-md-12">
        @Html.Partial("~/Views/Shared/_FilterReport.cshtml", new Intelemark.Models.Reports.BaseReportModel() { StartDate = start, EndDate = end }, new ViewDataDictionary() { { "CampaignId", ViewBag.CampaignId } })
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Campaign Revenue Report</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">

                    <table class="table table-striped table-hover table-bordered dataTable ReportDatatable" data-title="Intelemark Campaign Revenue Report">
                        <thead>
                            <tr>
                                <th>
                                    Campaign
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CampaignHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TrainingHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BudgetedHours)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Successes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SuccessesPerHour)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RevenuePerHour)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LaborCost)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NetRevenue)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Campaign.Identifier)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CampaignHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrainingHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BudgetedHours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Successes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SuccessesPerHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RevenuePerHour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LaborCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NetRevenue)
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
</form>


