@model Intelemark.Models.UserProfileModel
@{
    ViewBag.Title = "Profile";
}

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Edit @ViewBag.Title</h4>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <form class="form">
                        <div class="form-body">

                            <h4 class="form-section"><i class="ft-user"></i> Personal Info</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name)
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Address)
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Contact)
                                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @placeholder = "Contact from the User" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PhoneNumber)
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control phone-inputmask", @placeholder = "Phone Number from the contact" })
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.State)
                                        @Html.TextBoxFor(m => m.State, new { @class = "form-control", @placeholder = "State" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.City)
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ZipCode)
                                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @placeholder = "Zip Code fomr the User" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Country)
                                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", @placeholder = "Country from the User" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.StartDate, new { @class = "col-md-6 control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.StartDate, "{0:MM/dd/yyyy}", new { @class = "form-control pickadate-dropdown picker__input", @placeholder = "Select a Date" })
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <span class="la la-calendar-o"></span>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EndDate, new { @class = "col-md-6 control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.EndDate, "{0:MM/dd/yyyy}", new { @class = "form-control pickadate-dropdown picker__input", @placeholder = "Select a Date", })
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <span class="la la-calendar-o"></span>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AvailableHours, new { @class = "col-md-6 control-label" })
                                        @Html.TextBoxFor(m => m.AvailableHours, new { @class = "form-control", @placeholder = "Available Hours for Agent" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password)
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Change user's password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <h4 class="form-section"><i class="ft-paperclip"></i> Additional Info</h4>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Notes)
                                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @rows = "5" })
                            </div>
                        </div>
                        <div class="form-actions pull-right">
                            <a href="@Url.Action("AllUsers", "Account")" class="btn btn-warning mr-1"> <i class="la la-ban"></i> Cancel</a>

                            <button type="submit" class="btn btn-primary">
                                <i class="la la-check-square-o"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



}

