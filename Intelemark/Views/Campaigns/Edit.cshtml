@model Intelemark.Models.CampaignModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Edit Campaign</h4>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <form class="form">
                        <div class="form-body">
                            <h4 class="form-section"><i class="ft-flag"></i> General Information</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Identifier)
                                        @Html.EditorFor(model => model.Identifier, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Identifier, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Description)
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Objective)
                                        @Html.TextAreaFor(m => m.Objective, new { @class = "form-control", @rows = "5" })
                                        @Html.ValidationMessageFor(model => model.Objective, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.BillingPH)
                                        @Html.EditorFor(model => model.BillingPH, new { htmlAttributes = new { @class = "form-control", @placeholder = "This is going to be the billing per hour for the campaign", @type = "number", step = "any" } })
                                        @Html.ValidationMessageFor(model => model.BillingPH, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaxAttempt)
                                        @Html.EditorFor(model => model.MaxAttempt, new { htmlAttributes = new { @class = "form-control", @placeholder = "Max attempt of calling allowed in this campaign" } })
                                        @Html.ValidationMessageFor(model => model.MaxAttempt, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CampaignLimit)
                                        @Html.EditorFor(model => model.CampaignLimit, new { htmlAttributes = new { @class = "form-control", @placeholder = "Max Hour Limit for this campaign to be worked on" } })
                                        @Html.ValidationMessageFor(model => model.CampaignLimit, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Client</label>
                                        @Html.DropDownList("ClientId", null, htmlAttributes: new { @class = "form-control select2" })
                                        @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Account Manager</label>
                                        @Html.DropDownList("AccountManagerId", null, htmlAttributes: new { @class = "form-control select2" })
                                        @Html.ValidationMessageFor(model => model.AccountManagerId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <h4 class="form-section"><i class="ft-settings"></i> Properties</h4>

                            <div class="row skin skin-square">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(m => m.CompanyLink, new { @class = "", @id = "CompanyLink" })
                                    <label for="CompanyLink" class="">@Html.LabelFor(model => model.CompanyLink)</label>
                                </div>

                                <div class="col-md-2">
                                    @Html.CheckBoxFor(m => m.ActiveControl, new { @class = "", @id = "ActiveControl" })
                                    <label for="ActiveControl" class="">@Html.LabelFor(model => model.ActiveControl)</label>
                                </div>

                                <div class="col-md-2">
                                    @Html.CheckBoxFor(m => m.SpellCheck, new { @class = "", @id = "SpellCheck" })
                                    <label for="SpellCheck" class="">@Html.LabelFor(model => model.SpellCheck)</label>
                                </div>
                            </div>


                            <h4 class="form-section"><i class="ft-file"></i> Stored Documents</h4>

                            @if (Model.StoredFiles?.Count > 0)
                            {
                                <div class="col-md-12">
                                    @foreach (var item in Model.StoredFiles)
                                    {
                                        <div class="row">
                                            <a href="@item.FileUrl" target="_blank">@item.FileName</a>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="col-md-12">
                                    <div class="row">
                                        Theres no files attached to this campaign.
                                    </div>
                                </div>
                            }

                            <div class="form-actions pull-right">
                                <a href="@Url.Action("Index", "Campaigns")" class="btn btn-warning mr-1"> <i class="la la-ban"></i> Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="la la-check-square-o"></i> Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


