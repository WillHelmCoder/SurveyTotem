@model IEnumerable<Intelemark.Models.CampaignModel>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Campaigns List</h4>
            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li><a href="@Url.Action("Create", "Campaigns")"> <i class="ft-plus-circle"></i> ADD</a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body">

                <table class="table table-striped table-hover table-bordered zero-configuration dataTable table-dataTables">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Identifier)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Objective)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BillingPH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaxAttempt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CompanyLink)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CampaignLimit)
                            </th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Identifier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Objective)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillingPH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxAttempt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyLink)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CampaignLimit)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-circle btn-warning la la-pencil", title = "Edit", data_toggle = "tooltip" })
                                <button class="btn btn-danger la la-trash-o btn-sm" data-toggle="modal" data-target=".@item.Id"></button>
                                @Html.Partial("~/Views/Shared/_Delete.cshtml", item.Id)
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

