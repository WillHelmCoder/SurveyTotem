@model IEnumerable<Intelemark.Models.UserCampaignModel>

@{
    ViewBag.Title = "Index";
}


    <form action="/UserCampaigns/Index" enctype="multipart/form-data" method="post">
        <div class="col-md-12 col-sm-12">
            <div class="card border-left-blue border-right-blue">
                <div class="card-header">
                    <div class="body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <strong>@Html.Label("Select a Campaign")</strong>
                                    @Html.DropDownList("CampaignId", null, htmlAttributes: new { @class = "form-control select2", @id = "CampaignId", @style = "width: 100%" })
                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-3 pull-right">
                                <strong>@Html.Label("Filter")</strong>
                                <button type="submit" class="btn btn-success text-white form-control">
                                    <i class="la la-check-square-o"></i> Filter
                                </button>
                            </div>
                        </div>
                    </div>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                </div>
            </div>
        </div>
    </form>


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">List of Users In Campaigns and Projects</h4>
            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li><a href="@Url.Action("Create", "UserCampaigns")"> <i class="ft-plus-circle"></i> ADD</a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body">

                <table class="table table-striped table-hover table-bordered zero-configuration dataTable table-dataTables">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Campaign.Identifier)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PayRateTrainingHours)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PayRateDialingHours)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PayRateSuccess)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BudgetedHours)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Campaign.Identifier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayRateTrainingHours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayRateDialingHours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayRateSuccess)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BudgetedHours)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-circle btn-warning la la-pencil", title = "Edit", data_toggle = "tooltip" })
                                <button class="btn btn-danger la la-trash-o btn-sm" data-toggle="modal" data-target=".@item.Id"></button>
                                @Html.Partial("~/Views/Shared/_Delete.cshtml", item.Id)
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

