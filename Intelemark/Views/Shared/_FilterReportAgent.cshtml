@model Intelemark.Models.Reports.BaseReportAgentModel

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card border-left-blue border-right-blue">
            <div class="card-header">
                <div class="body">
                    <div class="row">

                        <div class="col-md-2">
                            <div class="form-group">
                                <strong>@Html.Label("Select a Campaign")</strong>
                                @Html.DropDownList("CampaignId", null, htmlAttributes: new { @class = "form-control select2", @id = "CampaignId", @style = "width: 100%" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <strong>@Html.Label("Select an Agent")</strong>
                                @Html.DropDownList("AccountManagerId", null, htmlAttributes: new { @class = "form-control select2" })
                                @*@Html.DropDownList("AccountManagerId", null, htmlAttributes: new { @class = "form-control select2", @id = "AccountManagerId", @style = "width: 100%" })*@
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <strong>@Html.LabelFor(model => model.StartDate)</strong>
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.StartDate, "{0:MM/dd/yyyy}", new { @class = "form-control pickadate-dropdown picker__input", @placeholder = "Select a Date" })
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <span class="la la-calendar-o"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <strong>@Html.LabelFor(model => model.EndDate)</strong>
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.EndDate, "{0:MM/dd/yyyy}", new { @class = "form-control pickadate-dropdown picker__input", @placeholder = "Select a Date" })
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <span class="la la-calendar-o"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-2"></div>

                        <div class="col-md-2 pull-right">
                            <strong>@Html.Label("Filter")</strong>
                            <button type="submit" class="btn btn-success text-white form-control">
                                <i class="la la-check-square-o"></i> Submit
                            </button>
                        </div>
                    </div>

                </div>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

